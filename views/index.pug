extends layout

block content
	p#add-button(src="icons/success.svg" onclick="showModal()") +


	div#add-todo-modal(class="box-col all-12 x-center hidden")
		div(class="box-col all-12 x-center")
			h2 Create a todo.
			form(method="post")
				input#add-todo-input(placeholder="todo title" name="title")
				textarea#add-todo-textarea(placeholder="todo content" name="body")
				input#accept-button(type="image" src="icons/success.svg" action="/styleguide" onclick="hideModal()")
			img#close-button(src="icons/error.svg" onclick="hideModal()")



	nav(class="box-col all-12 fixed pb_15")
			div(class="box all-12 space-inside y-center")
				h3 Todo App
				ul
					li about
					li github

	div#todo-container
		each todo, i in todosObj
			- var ii = 'todo-' + i;
			div(id=ii class="todo" _span="11 11 5 4 3")
				h3(todo-parent=ii) #{todo.title}
				p(todo-parent=ii) #{todo.body}
				div(class="todo-button-box" todo-parent=ii)
					button(class="btn-1 todo-action" todo-parent=ii) EDIT
					button(class="btn-1 todo-action" todo-parent=ii) COMPLETE
				small(todo-parent=ii): em(todo-parent=ii) Created: #{todo.createdAt}